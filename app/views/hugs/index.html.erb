<h1>Hugs' list </h1>
<p>This is the list of hugs created</p>
<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<ul class="list-group">
  <% @hugs.each do |hug| %>
    <li class="list-group-item"><%= link_to(hug.title, hug_path(hug)) %> - Category : <%= hug.category %> - <%= hug.description %>
    <% if policy(hug).edit? %>
      <%= link_to("Edit", edit_hug_path(hug)) %>
    <% end %>
    <% if policy(hug).destroy? %>
      <%= link_to("Destroy", hug_path(hug), method: :delete, data: { confirm: "Are you sure?" }) %>
    <% end %></li>
  <% end %>
</ul>

<p>
<%= link_to("Create a hug",new_hug_path) %> --- <%= link_to("Back to main page",root_path) %> </p>

<h1>Create a hug</h1>
<p>Find me in app/views/hugs/news.html.erb</p>

<%= form_for(@hug) do |f| %>
  <li> <%= f.label :title %>
  <%= f.text_field :title %> </li>
  <li> <%= f.label :description %>
  <%= f.text_field :description %></li>
  <li> <%= f.label :price %>
  <%= f.number_field :price %></li>
  <li> <%= f.label :category %>
  <%= f.text_field :category %></li>
  <li> <%= f.label :city %>
  <%= f.text_field :city %></li>
  <li> <%= f.label :address %>
  <%= f.text_field :address %></li>
  <%= f.submit %>
<% end %>

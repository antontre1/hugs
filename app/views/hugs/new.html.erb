<h1>Create a hug</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
        <%= simple_form_for(@hug) do |f| %>
        <%= f.input :title %>
        <%= f.input :description %>
        <%= f.input :category %>
        <%= f.input :price %>
        <%= f.input :address %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
